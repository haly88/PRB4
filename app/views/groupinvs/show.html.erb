<div class="row">
  <% if @groupinv.usuario_pertenece?(current_user) %>
    <%= link_to 'Salir del Groupinv', groupinv_usuario_path(groupinv: @groupinv, usuario: current_user), method: :delete %>
  <% else %>
    <%= link_to 'Unirse al Groupinv', groupinv_usuarios_path(groupinv: @groupinv), method: :post %>
  <% end %>
  <% if @groupinv.administrador?(current_user) %>
    <%= link_to 'Borrar Groupinv', groupinv_path(@groupinv), method: :delete %>
  <% end %>
</div>

<p>
  <strong>Nombre:</strong>
  <%= @groupinv.nombre %>
</p>

<p>
  <strong>Personasmin:</strong>
  <%= @groupinv.personasMin %>
</p>

<p>
  <strong>Personasmax:</strong>
  <%= @groupinv.personasMax %>
</p>

<p>
  <strong>Montoingreso:</strong>
  <%= @groupinv.montoIngreso %>
</p>

<p>
  <strong>Montomensual:</strong>
  <%= @groupinv.montoMensual %>
</p>

<p>
  <strong>Esadministrador:</strong>
  <%= @groupinv.esAdministrador %>
</p>

<div class="small-6 columns">
  <h3>Usuarios</h1>
  <% @groupinv.usuarios.each do |usuario| %>
    <%= usuario.email %>
    <% if @groupinv.administrador?(current_user) && usuario != current_user %>
        <%= link_to 'Borrar', groupinv_usuario_path(groupinv: @groupinv, usuario: usuario), method: :delete %>
    <% end -%></br>
  <% end %>
</div>
<div class="small-6 columns">
  <h3>Proyectos</h1>
  <div class="row">
    <% @groupinv.proyectos.each do |proyecto| %>
      <%= proyecto.nombre %>
      <% if @groupinv.administrador?(current_user) %>
        <%= link_to 'Borrar', groupinv_proyecto_path(groupinv: @groupinv, proyecto: proyecto), method: :delete %>
      <% end -%></br>
    <% end -%>
  </div>
  <div class="row">
    <%= render "groupinv_proyectos/form" %>
  </div>
</div>

<div>
  <%= link_to 'Edit', edit_groupinv_path(@groupinv) %> |
  <%= link_to 'Back', root_path %>
</div>

