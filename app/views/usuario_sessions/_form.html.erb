<%= form_tag usuario_sessions_path, :method => :post do %>
	<div class="row">
		<div class="columns small-12">
			<h3>Ingresar</h3>
		</div>
	</div>
	<div class="row">
		<div class="columns small-12">
			<%= label_tag :email %>
  		<%= text_field_tag :email %>
		</div>
	</div>
	<div class="row">
		<div class="columns small-12">
			<%= label_tag :password %>
  		<%= password_field_tag :password %>
		</div>
	</div>
	<div class="row">
		<div class="columns small-12">
			<%= check_box_tag :remember_me, 1, params[:remember_me] %> Remember me
		</div>
	</div>
	<div class="row">
		<div class="columns small-12">
			<%= submit_tag 'Logearme', class: 'button' %>
		</div>
	</div>
<% end %>



